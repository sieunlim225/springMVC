<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	
	<definition name="anything/*" template="/any/{1}"/>
    
    <definition name="testlayout" template="/WEB-INF/tiles/layout/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/tiles/headfoot/header.jsp" />
        <put-attribute name="sidebar" value="/WEB-INF/tiles/sidebar/sidebar.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/headfoot/footer.jsp" />

    </definition>
	<definition name="*" extends="testlayout">
        <put-attribute name="content" value="/WEB-INF/views/{1}.jsp" />
    </definition>
    
 
</tiles-definitions>